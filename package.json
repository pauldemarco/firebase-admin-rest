		"@types/bun": "^1.0.0",
		"bun-plugin-dts": "^0.2.1",
		"prettier": "^3.3.3",
		"typescript": "^5.4.5",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@tsndr/cloudflare-worker-jwt": "^2.5.3",
